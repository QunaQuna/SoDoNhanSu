@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo Nhân Viên</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Thêm Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f7fa;
            color: #333;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            padding: 30px;
            position: relative;
            overflow: hidden;
        }

            .container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(to right, #3498db, #2ecc71);
            }

        .header h2 {
            color: #2c3e50;
            font-size: 28px;
            margin-bottom: 15px;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .header p {
            color: #7f8c8d;
            font-size: 16px;
            max-width: 600px;
            margin: 0 auto 20px;
            line-height: 1.8;
            text-align: center;
        }

        /* Tab styling */
        .nav-tabs {
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 25px;
        }

            .nav-tabs .nav-link {
                color: #6c757d;
                font-weight: 600;
                border: none;
                padding: 12px 24px;
                transition: all 0.3s;
            }

                .nav-tabs .nav-link:hover {
                    color: #3498db;
                    border: none;
                }

                .nav-tabs .nav-link.active {
                    color: #3498db;
                    background-color: transparent;
                    border: none;
                    border-bottom: 3px solid #3498db;
                }

        .tab-content {
            padding: 10px 0;
        }

        /* Import tab styling */
        .import-container {
            border: 2px dashed #3498db;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            background-color: #f8fafc;
            margin-bottom: 25px;
            transition: all 0.3s;
        }

            .import-container:hover {
                border-color: #2ecc71;
                background-color: #f0f9ff;
            }

        .import-icon {
            font-size: 48px;
            color: #3498db;
            margin-bottom: 15px;
        }

        .file-input-wrapper {
            position: relative;
            display: inline-block;
            margin: 15px 0;
        }

            .file-input-wrapper input[type="file"] {
                position: absolute;
                left: 0;
                top: 0;
                opacity: 0;
                width: 100%;
                height: 100%;
                cursor: pointer;
            }

        .file-input-label {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .file-input-label:hover {
                background: linear-gradient(135deg, #2980b9, #2573a7);
                transform: translateY(-2px);
            }

        .selected-file {
            margin-top: 10px;
            font-size: 14px;
            color: #2ecc71;
            font-weight: 600;
        }

        .import-options {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
            text-align: left;
        }

        .import-results {
            max-height: 300px;
            overflow-y: auto;
            margin-top: 20px;
        }

        .result-item {
            padding: 8px 12px;
            margin-bottom: 5px;
            border-radius: 5px;
            font-size: 14px;
        }

        .result-success {
            background-color: #d4edda;
            color: #155724;
            border-left: 4px solid #28a745;
        }

        .result-error {
            background-color: #f8d7da;
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        .result-warning {
            background-color: #fff3cd;
            color: #856404;
            border-left: 4px solid #ffc107;
        }

        /* Form styling (giữ nguyên từ file cũ) */
        .form-section {
            background-color: #f8fafc;
            padding: 25px;
            border-radius: 10px;
            margin-bottom: 25px;
            border: 2px solid #e8f4fc;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .field-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 15px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e0e6ed;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 25px;
            border-top: 2px solid #eaeaea;
        }

        .btn {
            padding: 12px 28px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            flex: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #95a5a6, #7f8c8d);
            color: white;
        }

        /* Loading và message (giữ nguyên) */
        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.9);
            z-index: 1000;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .message-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1001;
            max-width: 400px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .field-row {
                grid-template-columns: 1fr;
            }

            .btn-container {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Đang xử lý...</p>
    </div>

    <div class="message-container" id="messageContainer"></div>

    <div class="container">
        <div class="header">
            <h2>
                <i class="fas fa-user-plus"></i>
                Thêm Nhân Viên
            </h2>
            <p>Thêm nhân viên mới vào hệ thống</p>
        </div>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="employeeTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="single-tab" data-bs-toggle="tab"
                        data-bs-target="#single" type="button" role="tab">
                    <i class="fas fa-user"></i> Thêm từng người
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="import-tab" data-bs-toggle="tab"
                        data-bs-target="#import" type="button" role="tab">
                    <i class="fas fa-file-import"></i> Import từ Excel
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="employeeTabsContent">
            <!-- Tab 1: Thêm từng người -->
            <div class="tab-pane fade show active" id="single" role="tabpanel">
                <form id="createEmployeeForm" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-section">
                        <h4 class="mb-3"><i class="fas fa-id-card"></i> Thông Tin Cá Nhân</h4>

                        <div class="form-group">
                            <label class="form-label">ID Nhân Viên *</label>
                            <input type="text" name="emp_id" class="form-control" placeholder="Nhập mã nhân viên" required />
                            <div class="text-danger" data-valmsg-for="emp_id"></div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Họ và Tên *</label>
                            <input type="text" name="emp_name" class="form-control" placeholder="Nhập họ và tên đầy đủ" required />
                            <div class="text-danger" data-valmsg-for="emp_name"></div>
                        </div>

                        <div class="field-row">
                            <div class="form-group">
                                <label class="form-label">Giới Tính</label>
                                <div class="d-flex gap-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="emp_sex" id="male" value="Nam" checked>
                                        <label class="form-check-label" for="male">
                                            <i class="fas fa-male"></i> Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="emp_sex" id="female" value="Nữ">
                                        <label class="form-check-label" for="female">
                                            <i class="fas fa-female"></i> Nữ
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Chức Vụ *</label>
                                <input type="text" name="emp_position" class="form-control" placeholder="Nhập chức vụ" required />
                                <div class="text-danger" data-valmsg-for="emp_position"></div>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h4 class="mb-3"><i class="fas fa-tasks"></i> Thông Tin Công Việc</h4>

                        <div class="form-group">
                            <label class="form-label">Công Việc *</label>
                            <input type="text" name="job_position" class="form-control" placeholder="Nhập vị trí công việc" required />
                            <div class="text-danger" data-valmsg-for="job_position"></div>
                        </div>

                        <div class="field-row">
                            <div class="form-group">
                                <label class="form-label">ID Quản Lý</label>
                                <input type="text" name="supervisor_id" class="form-control" placeholder="Nhập ID người quản lý" />
                                <div class="text-danger" data-valmsg-for="supervisor_id"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Công Ty</label>
                                <input type="text" name="company_id" class="form-control" value="1" readonly />
                                <small class="text-muted">Mã công ty mặc định</small>
                            </div>
                        </div>
                    </div>

                    <div class="btn-container">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Tạo Nhân Viên
                        </button>
                        <button type="button" id="btnBack" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </button>
                    </div>
                </form>
            </div>

            <!-- Tab 2: Import từ Excel -->
            <div class="tab-pane fade" id="import" role="tabpanel">
                <div class="import-container">
                    <div class="import-icon">
                        <i class="fas fa-file-excel"></i>
                    </div>
                    <h4>Import Nhân Viên Từ Excel</h4>
                    <p class="text-muted mb-3">Upload file Excel để thêm nhiều nhân viên cùng lúc</p>

                    <div class="file-input-wrapper">
                        <input type="file" id="excelFile" accept=".xlsx,.xls" class="form-control">
                        <label class="file-input-label">
                            <i class="fas fa-upload"></i> Chọn File Excel
                        </label>
                    </div>
                    <div class="selected-file" id="selectedFileName"></div>

                    <div class="import-options mt-4">
                        <h5><i class="fas fa-cog"></i> Tùy chọn Import</h5>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="hasHeaders" checked>
                            <label class="form-check-label" for="hasHeaders">
                                File có dòng tiêu đề (hàng đầu tiên)
                            </label>
                        </div>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="skipDuplicates" checked>
                            <label class="form-check-label" for="skipDuplicates">
                                Bỏ qua mã nhân viên đã tồn tại
                            </label>
                        </div>
                        <div class="alert alert-info mt-3">
                            <h6><i class="fas fa-info-circle"></i> Cấu trúc file Excel:</h6>
                            <p class="mb-1">Cột 1: emp_id (Mã NV) *</p>
                            <p class="mb-1">Cột 2: emp_name (Tên NV) *</p>
                            <p class="mb-1">Cột 3: emp_sex (Giới tính)</p>
                            <p class="mb-1">Cột 4: emp_position (Chức vụ)</p>
                            <p class="mb-1">Cột 5: job_position (Vị trí)</p>
                            <p class="mb-1">Cột 6: supervisor_id (Quản lý)</p>
                            <p class="mb-1">Cột 7: company_id (Công ty - mặc định: 1)</p>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="button" id="btnImport" class="btn btn-success" disabled>
                            <i class="fas fa-file-import"></i> Bắt đầu Import
                        </button>
                        <button type="button" id="btnClearResults" class="btn btn-outline-secondary">
                            <i class="fas fa-trash"></i> Xóa kết quả
                        </button>
                    </div>

                    <!-- Kết quả import -->
                    <div class="import-results mt-4" id="importResults" style="display: none;">
                        <h5><i class="fas fa-chart-bar"></i> Kết quả Import</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center p-2">
                                        <h5 class="mb-0" id="successCount">0</h5>
                                        <small>Thành công</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center p-2">
                                        <h5 class="mb-0" id="errorCount">0</h5>
                                        <small>Lỗi</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center p-2">
                                        <h5 class="mb-0" id="totalCount">0</h5>
                                        <small>Tổng cộng</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="resultDetails"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS và dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // ========== TAB 1: THÊM TỪNG NGƯỜI ==========
            // Code từ file cũ (giữ nguyên)
            function showLoading() { $('#loadingOverlay').fadeIn(); }
            function hideLoading() { $('#loadingOverlay').fadeOut(); }

            function showMessage(type, text) {
                const icon = type === 'success' ? 'fa-check-circle' :
                             type === 'error' ? 'fa-exclamation-circle' : 'fa-exclamation-triangle';

                const message = $(`<div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas ${icon} me-2"></i>${text}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`);

                $('#messageContainer').empty().append(message);

                setTimeout(() => message.alert('close'), 5000);
            }

            $('#createEmployeeForm').on('submit', function(e) {
                e.preventDefault();

                let isValid = true;
                $(this).find('[required]').each(function() {
                    if (!$(this).val().trim()) {
                        isValid = false;
                        const fieldName = $(this).attr('name');
                        $(`[data-valmsg-for="${fieldName}"]`).html(`
                            <i class="fas fa-exclamation-circle"></i>
                            Vui lòng nhập thông tin này
                        `);
                    }
                });

                if (!isValid) {
                    showMessage('warning', 'Vui lòng điền đầy đủ thông tin bắt buộc');
                    return;
                }

                $('[data-valmsg-for]').empty();

                const formData = {
                    emp_id: $('input[name="emp_id"]').val().trim(),
                    emp_name: $('input[name="emp_name"]').val().trim(),
                    emp_sex: $('input[name="emp_sex"]:checked').val(),
                    emp_position: $('input[name="emp_position"]').val().trim(),
                    job_position: $('input[name="job_position"]').val().trim(),
                    supervisor_id: $('input[name="supervisor_id"]').val().trim() || null,
                    company_id: 1
                };

                showLoading();

                $.ajax({
                    url: '@Url.Action("Create")',
                    type: 'POST',
                    data: {
                        ...formData,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            showMessage('success', 'Tạo nhân viên thành công!');
                            $('#createEmployeeForm')[0].reset();
                            $('input[name="emp_sex"][value="Nam"]').prop('checked', true);

                            setTimeout(() => {
                                window.location.href = '@Url.Action("OrganizationalChart")';
                            }, 2000);
                        } else {
                            if (response.errors) {
                                Object.keys(response.errors).forEach(field => {
                                    $(`[data-valmsg-for="${field}"]`).html(`
                                        <i class="fas fa-exclamation-circle"></i>
                                        ${response.errors[field]}
                                    `);
                                });
                                showMessage('error', 'Có lỗi xảy ra khi tạo nhân viên');
                            }
                        }
                    },
                    error: function() {
                        hideLoading();
                        showMessage('error', 'Lỗi kết nối đến server');
                    }
                });
            });

            $('#btnBack').on('click', function() {
                if (confirm('Bạn có chắc chắn muốn quay lại? Dữ liệu chưa lưu sẽ bị mất.')) {
                    window.location.href = '@Url.Action("OrganizationalChart")';
                }
            });

            // ========== TAB 2: IMPORT EXCEL ==========
            // Hiển thị tên file khi chọn
            $('#excelFile').on('change', function() {
                const file = this.files[0];
                if (file) {
                    $('#selectedFileName').html(`
                        <i class="fas fa-file-excel text-success"></i>
                        ${file.name} (${formatFileSize(file.size)})
                    `);
                    $('#btnImport').prop('disabled', false);
                } else {
                    $('#selectedFileName').html('');
                    $('#btnImport').prop('disabled', true);
                }
            });

            // Định dạng kích thước file
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            // Xử lý import
            $('#btnImport').on('click', function() {
                const fileInput = $('#excelFile')[0];
                if (!fileInput.files.length) {
                    showMessage('warning', 'Vui lòng chọn file Excel trước');
                    return;
                }

                const file = fileInput.files[0];
                const fileExt = file.name.split('.').pop().toLowerCase();

                if (fileExt !== 'xlsx' && fileExt !== 'xls') {
                    showMessage('error', 'Vui lòng chọn file Excel (.xlsx hoặc .xls)');
                    return;
                }

                if (file.size > 10 * 1024 * 1024) {
                    showMessage('error', 'File quá lớn! Vui lòng chọn file nhỏ hơn 10MB.');
                    return;
                }

                const formData = new FormData();
                formData.append('file', file);
                formData.append('hasHeaders', $('#hasHeaders').is(':checked'));
                formData.append('skipDuplicates', $('#skipDuplicates').is(':checked'));

                showLoading();
                $('#importResults').hide();
                $('#resultDetails').empty();

                $.ajax({
                    url: '@Url.Action("ImportExcel")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        hideLoading();

                        if (response.success) {
                            displayImportResults(response);
                            showMessage('success', `Import hoàn tất! ${response.successCount} thành công, ${response.errorCount} lỗi`);
                        } else {
                            showMessage('error', response.message || 'Lỗi khi import file');
                        }
                    },
                    error: function(xhr) {
                        hideLoading();
                        showMessage('error', 'Lỗi kết nối đến server');
                        console.error('Import error:', xhr.responseText);
                    }
                });
            });

            // Hiển thị kết quả import
            function displayImportResults(data) {
                $('#successCount').text(data.successCount);
                $('#errorCount').text(data.errorCount);
                $('#totalCount').text(data.successCount + data.errorCount);

                let resultsHtml = '<div class="mt-3">';

                if (data.results && data.results.length > 0) {
                    data.results.forEach(result => {
                        const statusClass = result.status === 'success' ? 'result-success' :
                                          result.status === 'error' ? 'result-error' : 'result-warning';

                        resultsHtml += `
                            <div class="result-item ${statusClass}">
                                <i class="fas ${result.status === 'success' ? 'fa-check' : 'fa-times'} me-2"></i>
                                ${result.message}
                            </div>`;
                    });
                }

                resultsHtml += '</div>';
                $('#resultDetails').html(resultsHtml);
                $('#importResults').show();
            }

            // Xóa kết quả import
            $('#btnClearResults').on('click', function() {
                $('#importResults').hide();
                $('#resultDetails').empty();
                $('#excelFile').val('');
                $('#selectedFileName').empty();
                $('#btnImport').prop('disabled', true);
            });

            // Clear validation khi user nhập
            $('.form-control').on('input', function() {
                const fieldName = $(this).attr('name');
                $(`[data-valmsg-for="${fieldName}"]`).empty();
            });
        });
    </script>
</body>
</html>